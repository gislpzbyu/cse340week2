<div class="login-container">
    <h1>Login</h1>

    <% if (messages && messages.error) { %>
        <ul style="color: red; list-style: none; padding: 0;">
            <% messages.error.forEach(msg => { %>
                <li><%= msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/account/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required placeholder="Enter your email"><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required 
               pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
               title="Must contain at least one number, one uppercase letter, and one special character."
               placeholder="Enter your password"><br>
        <small>Passwords must be at least 12 characters, include a number, an uppercase letter, and a special character.</small><br>

        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
</div>